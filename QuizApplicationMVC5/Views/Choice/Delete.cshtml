@model QuizApplicationMVC5.EDMX.Choice

@{
    ViewBag.Title = "Eliminar Opción";
}

<h2>Eliminar Opción</h2>

<h3>¿Estás seguro que desea eliminar esta Opción?</h3>
<div>
    <h4>Opción</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Opción")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChoiceText)
        </dd>

        <dt>
            @Html.DisplayName("Pregunta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question.QuestionText)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar al Listado", "Index")
        </div>
    }
</div>
